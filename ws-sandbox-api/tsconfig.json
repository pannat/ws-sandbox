{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "target": "es2020",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": ["types", "node_modules/@types"],
  }
}
